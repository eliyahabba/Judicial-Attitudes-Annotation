            "sentences": [
                {
                    "sentence": "George Matheson FRSE (27 March 1842 – 28 August 1906) was a Scottish minister and hymn writer and prolific author",
                    "sentence_id": "0",
                    "paragraph_index": 0,
                    "global_sentence_index": 0
                },
                {
                    "sentence": "He was blind from the age of 17.",
                    "sentence_id": "1",
