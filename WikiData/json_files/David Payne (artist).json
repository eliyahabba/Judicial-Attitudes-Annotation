            "sentences": [
                {
                    "sentence": "David Payne (1843 – 1894) was a Scottish landscape painter",
                    "sentence_id": "0",
                    "paragraph_index": 0,
                    "global_sentence_index": 0
                }
            ]
        },
        {
            "paragraph_index": 1,
            "sentences": [
                {
                    "sentence": "Payne was born in Annan in the old county of Dumfriesshire, the son of a Mason",
                    "sentence_id": "0",
                    "paragraph_index": 1,
                    "global_sentence_index": 1
                },
                {
                    "sentence": "He was educated at Annan Academy (along with fellow artist William Ewart Lockhart)",
                    "sentence_id": "1",
                    "paragraph_index": 1,
                    "global_sentence_index": 2
                },
                {
                    "sentence": "He initially made his living as a house painter before becoming an artist",
                    "sentence_id": "2",
                    "paragraph_index": 1,
                    "global_sentence_index": 3
                },
                {
                    "sentence": "Payne moved to Derby in 1869 and was recorded as living at several places in the county of Derbyshire in the 1880s including Duffield and Barrow upon Trent",
                    "sentence_id": "3",
                    "paragraph_index": 1,
                    "global_sentence_index": 4
                },
                {
                    "sentence": "Payne was a student of George Turner \"Derbyshire's John Constable\") who also lived in Barrow upon Trent",
                    "sentence_id": "4",
                    "paragraph_index": 1,
                    "global_sentence_index": 5
                },
                {
                    "sentence": " Payne's carving of two anglers won the 1882 Derby Art Gallery medal for industrial art and the sculpture and medal have now been repurchased by the gallery",
                    "sentence_id": "5",
                    "paragraph_index": 1,
                    "global_sentence_index": 6
                }
            ]
        },
        {
            "paragraph_index": 2,
            "sentences": [
                {
                    "sentence": "Payne became a rural landscape and trompe-l'œil artist",
                    "sentence_id": "0",
                    "paragraph_index": 2,
                    "global_sentence_index": 7
                },
                {
                    "sentence": " He exhibited at the Royal Birmingham Society of Artists (R BSA), the Nottingham Museum and Art Gallery, and was a member of the Royal Scottish Academy (RSA)",
                    "sentence_id": "1",
                    "paragraph_index": 2,
                    "global_sentence_index": 8
                },
                {
                    "sentence": "He is regarded as one of the best of the 19th-century Birmingham artists",
                    "sentence_id": "2",
                    "paragraph_index": 2,
                    "global_sentence_index": 9
                },
                {
                    "sentence": "In 1891, Queen Victoria visited Derby to lay the foundation stone of the Derbyshire Royal Infirmary and to knight Sir Alfred Haslam",
                    "sentence_id": "3",
                    "paragraph_index": 2,
                    "global_sentence_index": 10
                },
                {
                    "sentence": " The scene in the market place where hundreds of people, soldiers, horses and bunting turned out to meet Queen Victoria was captured by Payne",
                    "sentence_id": "4",
                    "paragraph_index": 2,
                    "global_sentence_index": 11
                },
                {
                    "sentence": " This painting is now in Derby Museum and Art Gallery, but he also has work in his home town",
                    "sentence_id": "5",
                    "paragraph_index": 2,
                    "global_sentence_index": 12
                }
            ]
        },
        {
            "paragraph_index": 3,
            "sentences": [
                {
                    "sentence": "Payne married and had 14 children",
                    "sentence_id": "0",
                    "paragraph_index": 3,
                    "global_sentence_index": 13
                },
                {
                    "sentence": "He died in Sheffield in 1894. Today Payne has paintings in several British institutions including Derby Museum, the Defence Academy and Southampton City Art Gallery",
                    "sentence_id": "1",
                    "paragraph_index": 3,
                    "global_sentence_index": 14
                }
