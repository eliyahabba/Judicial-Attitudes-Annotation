                {
                    "sentence": "דיון",
                    "sentence_id": "0",
                    "paragraph_index": 22,
                    "global_sentence_index": 65
                }
            ]
        },
        {
            "paragraph_index": 23,
            "sentences": [
                {
                    "sentence": "המעשים עליהם נותן הנאשם את הדין הם מעשים חמורים ביותר",
                    "sentence_id": "0",
                    "paragraph_index": 23,
