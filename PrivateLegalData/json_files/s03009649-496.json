        },
        {
            "paragraph_index": 26,
            "sentences": [
                {
                    "sentence": "באלה מצאתי אישור וחיזוק ראייתי לגרסת המתלוננת",
                    "sentence_id": "0",
                    "paragraph_index": 26,
                    "global_sentence_index": 51
