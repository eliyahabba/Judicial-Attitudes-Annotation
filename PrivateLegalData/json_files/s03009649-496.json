        },
        {
            "paragraph_index": 22,
            "sentences": [
                {
                    "sentence": "ת",
                    "sentence_id": "0",
                    "paragraph_index": 22,
                    "global_sentence_index": 39
                },
                {
                    "sentence": "זה לא מה שהיה",
                    "sentence_id": "1",
                    "paragraph_index": 22,
                    "global_sentence_index": 40
                },
                {
                    "sentence": "קודם כל הוא היה עם הפנים אלי והאבר היה בצורה מכוונת אלי",
                    "sentence_id": "2",
                    "paragraph_index": 22,
                    "global_sentence_index": 41
                },
                {
                    "sentence": "והוא קרץ בעין אלי",
                    "sentence_id": "3",
