        {
            "paragraph_index": 8,
            "sentences": [
                {
                    "sentence": "ניתנה והודעה היום כ\"ב  אדר ב תשע\"א, 28/03/2011 במעמד הנוכחים",
                    "sentence_id": "0",
                    "paragraph_index": 8,
                    "global_sentence_index": 7
